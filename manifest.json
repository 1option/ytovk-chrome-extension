{
    "default_locale": "ru",
    "description": "__MSG_description__",
    "name": "__MSG_name__",
    "manifest_version": 3,
    "version": "1.3",
    "author": "foldersjarer@gmail.com",
    "icons": {
        "16": "img/icon_active_16.png",
        "32": "img/icon_active_32.png",
        "48": "img/icon_active_48.png",
        "128": "img/icon_active_128.png"
    },
    "action": {
        "default_icon": "img/icon_disabled.png",
        "default_title": "Zzz... üêù"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "run_at": "document_idle",
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "notifications",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.css"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}
