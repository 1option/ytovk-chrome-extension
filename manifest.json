{
    "manifest_version": 3,
    "name": "Загрузчик музыки из Youtube в VK",
    "description": "Позволяет вам загрузить музыку из Youtube и сохранять во Вконтакте.",
    "version": "1.1",
    "author": "foldersjarer@gmail.com",
    "icons": {
        "16": "img/icon_active_16.png",
        "32": "img/icon_active_32.png",
        "48": "img/icon_active_48.png",
        "128": "img/icon_active_128.png"
    },
    "action": {
        "default_icon": "img/icon_disabled.png",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "notifications",
        "contextMenus",
        "tabs",
        "storage",
        "webNavigation",
        "declarativeContent",
        "identity"
    ],
    "host_permissions": [
        "https://*/*"
    ]
}
